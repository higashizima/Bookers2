  <h2>User info</h2>
  
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  
  <div class="btn btn-outline-dark btn-block col-12">
    <%= link_to edit_user_path(user.id) do %>
    <i class="fa-solid fa-user-gear text-dark"></i>
    <% end %>
  </div>
  
  
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %>
    <p>Title</p>
    <%= f.text_field :title, class: 'col-12' %>
