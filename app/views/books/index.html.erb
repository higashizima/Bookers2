<h1>投稿フォーム</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <p>タイトル：<%= book.title %></p>
    <% end %>
    <p>オプション：<%= book.body %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
  </div>
<% end %>