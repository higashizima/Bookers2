<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      
      <h2>User info</h2>
        
        <%= form_with model: @user do |f| %>
          <p class="mb-1">Name</p>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:@user.name, class: 'col-12 mb-2' %>
          
         <p class="mb-1">Image</p>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: 'h-25 d-inline-block mb-2' %>
        
          <p class="mb-1">Introduction</p>
          <%= f.text_field :introduction, id:"inputIntroduction", placeholder:@user.introduction, class: 'col-12 mb-2' %>
          <br>
          <%= f.submit "Update User", class: 'btn btn-secondary mt-3' %>
        <% end %>
      
    </div>
  </div>
</div>

