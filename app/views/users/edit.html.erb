<h1>User info</h1>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:@user.name%>

  <label for="inputIntroduction">Introductio</label>
  <%= f.text_field :introduction, id:"inputIntroduction", placeholder:@user.introduction%>

  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>