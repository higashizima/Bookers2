<% flash.each do |message_type, message| %>
  <%= content_tag :div, message, class: message_type %>
<% end %>

<%= render 'books/list', book: @book, user: @user %>


  <% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <p>タイトル：<%= book.title %></p>
    <% end %>
    <p>オプション：<%= book.body %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
  </div>
<% end %>
